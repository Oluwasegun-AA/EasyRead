{
  "manifest_version": 2,
  "name": "__MSG_Name__",
  "description": "__MSG_description__",
  "version": "0.0.1",
  "author": "Adépòjù Olúwáségun",
  "default_locale": "en",
  "homepage_url": "http://www.popup.com",
  "browser_action": {
    "default_icon": {
      "16": "assets/icon.png",
      "32": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    },
    "default_popup": "index.html"
  },
  "icons": {
    "16": "assets/icon.png",
    "32": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "permissions": ["contextMenus", "declarativeContent", "storage", "activeTab"],
  "offline_enabled": true,
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+E"
      },
      "description": "Toggle EasyRead",
      "global": false
    }
  }
}
