{
  "manifest_version": 2,
  "name": "__MSG_Name__",
  "description": "__MSG_description__",
  "version": "0.0.1",
  "author": "Adépòjù Olúwáségun",
  "default_locale": "en",
  "homepage_url": "http://www.popup.com",
  "background": {
    "scripts": ["src/app/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "src/client/assets/icon.png",
      "32": "src/client/assets/icon.png",
      "48": "src/client/assets/icon.png",
      "128": "src/client/assets/icon.png"
    },
    "default_popup": "src/client/views/popup.html"
  },
  "options_page": "src/client/views/options.html",
  "icons": {
    "16": "src/client/assets/icon.png",
    "32": "src/client/assets/icon.png",
    "48": "src/client/assets/icon.png",
    "128": "src/client/assets/icon.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead",
    "declarativeContent",
    "storage",
    "<all_urls>"
  ],
  "offline_enabled": true,
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+E"
      },
      "description": "Toggle EasyRead",
      "global": false
    }
  }
}
